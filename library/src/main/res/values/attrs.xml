<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XRecyclerContentLayout">
        <attr name="recyclerClipToPadding" format="boolean" />
        <attr name="recyclerPadding" format="dimension" />
        <attr name="recyclerPaddingTop" format="dimension" />
        <attr name="recyclerPaddingBottom" format="dimension" />
        <attr name="recyclerPaddingLeft" format="dimension" />
        <attr name="recyclerPaddingRight" format="dimension" />
        <attr name="recyclerScrollbarNone" format="boolean" />
        <attr name="recyclerBackgroundColor" format="color" />

        <attr name="recyclerScrollbarStyle">
            <flag name="insideOverlay" value="0x00000000" />
            <flag name="insideInset" value="0x01000000" />
            <flag name="outsideOverlay" value="0x02000000" />
            <flag name="outsideInset" value="0x03000000" />
        </attr>
    </declare-styleable>


    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" format="dimension"/>
        <attr name="type">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
            <enum name="roundTop" value="2" />
        </attr>
        <attr name="circleBorder" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="FunctionBar">
        <attr name="android:hint"/>
        <attr name="android:gravity"/>
        <attr name="functionTitle" format="string"/>
        <attr name="functionTitleColor" format="color"/>
        <attr name="functionTitleSize" format="dimension"/>
        <attr name="functionEditStyle" format="reference"/>
        <attr name="clearImageRes" format="reference"/>
        <attr name="clearImageSize" format="dimension"/>
        <attr name="arrowImageRes" format="reference"/>
        <attr name="arrowImageSize" format="dimension"/>
        <attr name="showArrow" format="boolean"/>
        <attr name="functionEditable" format="boolean"/>
        <attr name="showClearBtn" format="boolean"/>
        <attr name="isRequestField" format="boolean"/>
        <attr name="functionInputType">
            <enum name="TEXT" value="0" />
            <enum name="NAME_CHINA" value="1" />
            <enum name="PASSWORD" value="2" />
            <enum name="EMAIL" value="3" />
            <enum name="PHONE" value="4" />
            <enum name="NUMBER" value="5" />
            <enum name="FLOAT" value="6" />
        </attr>
        <attr name="numericPrecision" format="integer"/>
    </declare-styleable>
</resources>