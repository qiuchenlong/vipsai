<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/layout_item_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/fragment_help_center_qa"
        style="@style/option_item_rl"
        android:background="?attr/selectableItemBackground">

        <TextView
            style="@style/option_item_text_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常见问题"
            android:textSize="@dimen/text_size_14"/>

        <!--android:text="@string/clean_cache"-->


        <ImageView
            android:id="@+id/fragment_setttings_payment_modify_password_btn_detail"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_arrow_right"/>


    </RelativeLayout>

    <View style="@style/h_line"/>


    <RelativeLayout
        android:id="@+id/fragment_help_center_get_success"
        style="@style/option_item_rl"
        android:background="?attr/selectableItemBackground">

        <TextView
            style="@style/option_item_text_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何获胜"
            android:textSize="@dimen/text_size_14"/>

        <!--android:text="@string/clean_cache"-->


        <ImageView
            android:id="@+id/fragment_setttings_payment_fortgot_password_btn_detail"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_arrow_right"/>


    </RelativeLayout>

    <View style="@style/h_line"/>


    <RelativeLayout
        android:id="@+id/fragment_help_center_what"
        style="@style/option_item_rl"
        android:background="?attr/selectableItemBackground">

        <TextView
            style="@style/option_item_text_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我们能提供什么"
            android:textSize="@dimen/text_size_14"/>

        <!--android:text="@string/clean_cache"-->

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_arrow_right"/>


    </RelativeLayout>

    <View style="@style/h_line"/>



    <View
        style="@style/h_line"
        android:layout_marginTop="20dip"/>


    <RelativeLayout
        android:id="@+id/fragment_help_center_customer_service"
        style="@style/option_item_rl"
        android:background="?attr/selectableItemBackground">

        <TextView
            style="@style/option_item_text_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textSize="@dimen/text_size_14"/>

        <!--android:text="@string/clean_cache"-->

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_arrow_right"/>


    </RelativeLayout>

    <View style="@style/h_line"/>



</LinearLayout>
