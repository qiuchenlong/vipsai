<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_alpha_192"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/activity_pub_layout_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/lay_8"
        android:paddingTop="@dimen/lay_8"
        tools:ignore="RtlHardcoded,UseCompoundDrawables">



        <!--android:background="@drawable/bg_pub"-->


        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            >

            <!--android:background="@drawable/bg_pub_write"-->

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_pub_sample"
                />

            <!--android:contentDescription="@string/tweet_public"-->
            <!--android:src="@mipmap/ic_new_blog"-->

        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lay_4"
            android:layout_marginTop="@dimen/lay_4"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/lay_8"
            android:paddingRight="@dimen/lay_8"
            android:paddingTop="2dp"
            android:text="样板比赛"
            android:textColor="#686868"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_pub_layout_private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/lay_8"
        android:paddingTop="@dimen/lay_8"
        tools:ignore="UseCompoundDrawables">



        <!--android:background="@drawable/bg_pub"-->


        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            >

            <!--android:background="@drawable/bg_pub_write"-->

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_pub_private"
                 />
            <!--android:contentDescription="@string/tweet_public"-->
            <!--android:src="@mipmap/ic_new_tweet"-->


        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lay_4"
            android:layout_marginTop="@dimen/lay_4"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/lay_8"
            android:paddingRight="@dimen/lay_8"
            android:paddingTop="2dp"
            android:text="私人比赛"
            android:textColor="#686868"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_pub_layout_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/lay_8"
        android:paddingTop="@dimen/lay_8"
        tools:ignore="RtlHardcoded,UseCompoundDrawables">



        <!--android:background="@drawable/bg_pub"-->


        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            >

            <!--android:background="@drawable/bg_pub_write"-->

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_pub_ad"
                 />

            <!--android:contentDescription="@string/tweet_public"-->
            <!--android:src="@mipmap/ic_new_blog"-->

        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lay_4"
            android:layout_marginTop="@dimen/lay_4"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/lay_8"
            android:paddingRight="@dimen/lay_8"
            android:paddingTop="2dp"
            android:text="商家比赛"
            android:textColor="#686868"
            android:textSize="@dimen/font_12" />
    </LinearLayout>





    <ImageView
        android:id="@+id/btn_pub"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_nav_add_normal"
         />


</RelativeLayout>