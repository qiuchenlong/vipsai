<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="user"
            type="com.vs.vipsai.publish.viewmodels.VMUser" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/bar_height"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_frame_bottom_white"
            android:paddingRight="@dimen/padding_12">

            <ImageView
                android:id="@+id/checkbox"
                style="@style/imageview_checkbox"
                android:visibility="@{user.picking.get().booleanValue() ? View.VISIBLE : View.GONE}"
                android:layout_weight="0"
                android:layout_marginRight="@dimen/padding_12"
                android:onClick="@{user::onClick}"/>

            <com.vs.vipsai.widget.GlidImageView
                android:layout_width="@dimen/list_image_size"
                android:layout_height="@dimen/list_image_size"
                app:type="circle"
                android:layout_weight="0"
                app:bindImage="@{user.portrait}"
                app:placeHolder="@{user.iconPlaceHolder}"
                android:layout_marginRight="@dimen/padding_12"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{user.name}"/>

        </LinearLayout>

    </FrameLayout>


</layout>

