<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/layout_item_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_payment_modify_password"
        style="@style/option_item_rl"
        android:background="?attr/selectableItemBackground">

        <TextView
            style="@style/option_item_text_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改支付密码"
            android:textSize="@dimen/text_size_14"/>

        <!--android:text="@string/clean_cache"-->


        <ImageView
            android:id="@+id/fragment_setttings_payment_modify_password_btn_detail"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_arrow_right"/>


    </RelativeLayout>

    <View style="@style/h_line"/>


    <RelativeLayout
        android:id="@+id/rl_payment_forgot_password"
        style="@style/option_item_rl"
        android:background="?attr/selectableItemBackground">

        <TextView
            style="@style/option_item_text_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记支付密码"
            android:textSize="@dimen/text_size_14"/>

        <!--android:text="@string/clean_cache"-->


        <ImageView
            android:id="@+id/fragment_setttings_payment_fortgot_password_btn_detail"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_arrow_right"/>


    </RelativeLayout>

    <View style="@style/h_line"/>


    <RelativeLayout
        android:id="@+id/rl_payment_open_fingerprint"
        style="@style/option_item_rl"
        android:background="?attr/selectableItemBackground">

        <TextView
            style="@style/option_item_text_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启指纹支付"
            android:textSize="@dimen/text_size_14"/>

        <!--android:text="@string/clean_cache"-->


        <com.vs.vipsai.widget.togglebutton.ToggleButton
            android:id="@+id/fragment_setttings_payment_open_fingerprint_double_click"
            style="@style/option_item_toggleButton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

    <View style="@style/h_line"/>


</LinearLayout>
