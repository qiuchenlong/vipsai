<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_login_3party_qq"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="工商银行(6334)"
            android:textSize="@dimen/text_size_13"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_arrow_right"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="$"/>

        <com.vs.vipsai.widget.edit.EditWithDelView
            android:id="@+id/fragment_balance_withdraw_money_input_edit"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="8"
            android:background="@null"
            android:textSize="32sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="全部取出"
            android:textSize="13sp"
            android:textColor="@color/mark_text_color"
            />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="12dp"
        android:text="收取手续费 $1 （0.1 手续费）"
        android:textSize="@dimen/text_size_12"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:text="可用余额: $5,2000"
        android:textSize="@dimen/text_size_12"
        />


    <Button
        android:id="@+id/fragment_balance_withdraw_money_btn_withdraw_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_btn_view_blue"
        android:text="取现"
        android:textColor="#FFFFFF"/>


</LinearLayout>
