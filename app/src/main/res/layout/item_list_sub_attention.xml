<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        >

        <!--android:background="?attr/selectableItemBackgroundBorderless"-->

        <!--android:background="@drawable/ic_material"-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="赞助商"
                android:textSize="@dimen/text_size_11"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_login_3party_qq"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <com.vs.vipsai.widget.PortraitView
                android:id="@+id/iv_portrait"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/tmp_head"
                tools:src="@mipmap/image_no_5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_list_sub_attention_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="薛之谦"
                        android:textSize="15sp"
                        android:textColor="@color/mark_text_color"/>

                    <View
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/item_list_sub_attention_name"
                        android:layout_width="1dp"
                        android:layout_height="9dp"
                        android:layout_centerVertical="true"
                        android:background="#404040"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/item_list_sub_attention_name"
                        android:layout_marginLeft="12dp"
                        android:text="创办人"
                        android:textSize="11sp"
                        android:textColor="#9D9D9D"/>

                    <RelativeLayout
                        android:id="@+id/btn_pull"
                        android:layout_width="32dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="8dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/ic_arrow_bottom_gray"
                            />

                    </RelativeLayout>

                </RelativeLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1分钟前"
                    android:textSize="11sp"
                    android:textColor="#9D9D9D"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            style="@style/recycleview_title_style"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="4dp"
            android:text=""
            android:textSize="13.3dp"
            tools:text="DOTA2国际邀请赛（英语：The International, DOTA2 Championships，简称TI）是由Dota 2开发商维尔福公司（Valve）举行的电子竞技比赛" />



        <FrameLayout
            android:id="@+id/item_list_sub_attention_layout_single"
            android:layout_width="match_parent"
            android:layout_height="176.2dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/item_list_sub_me_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/image_no_3"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_play_btn"/>

        </FrameLayout>


        <FrameLayout
            android:id="@+id/item_list_sub_attention_layout_bettle"
            android:layout_width="match_parent"
            android:layout_height="279.0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/image_no_9"
                    android:scaleType="centerCrop"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/image_no_12"
                    android:scaleType="centerCrop"
                    />

            </LinearLayout>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_vs_gray"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="6dp"
                    >

                    <com.vs.vipsai.media.ImagePreviewView
                        android:id="@+id/header1"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="6dp"
                        android:src="@mipmap/image_no_4"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分辨率"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@+id/header1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="屏幕上显示的像素个数"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_below="@+id/header1"
                        android:lines="2"
                        android:ellipsize="end"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="6dp"
                    >

                    <com.vs.vipsai.media.ImagePreviewView
                        android:id="@+id/header2"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="6dp"
                        android:src="@mipmap/image_no_4"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分辨率"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@+id/header2"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="输出多套分辨率的切图，例如480p和720p，在设计的时候要注意好切图区域的大小能被2和1.5整除的大小，"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_below="@+id/header2"
                        android:lines="2"
                        android:ellipsize="end"
                        />

                </RelativeLayout>


            </LinearLayout>
            

            

        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:minLines="1"
                android:textColor="#333333"
                android:textSize="16.6sp"
                android:layout_weight="7"
                android:text="王者之争"
                tools:text="王者之争" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:minLines="1"
                android:textColor="#FF0010"
                android:textSize="15.6sp"
                android:layout_weight="3"
                android:gravity="right"
                android:text="￥180.00"
                tools:text="￥180.00" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:lines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#9D9D9D"
                    android:textSize="11sp"
                    android:text="资格赛"
                    tools:text="资格赛" />

                <View
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="9dp"
                    android:background="#404040"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="萌娃"
                    android:textColor="@color/mark_text_color"
                    android:textSize="11sp"/>

                <View
                    android:layout_gravity="end"
                    android:layout_width="1dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"/>

            </LinearLayout>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="right"
                android:textColor="#000000"
                android:text=""
                android:visibility="gone"/>


            <com.vs.vipsai.widget.countdown.CountDownTimerView
                android:id="@+id/item_list_sub_attention_loop_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="right"
                />



            <!--<include layout="@layout/item_info_view_comment" />-->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#EFEFEF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_see_gray"
                    android:background="#00000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="1,234"
                    android:textSize="10sp"
                    android:paddingLeft="6px"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_comment_gray"
                    android:background="#00000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="10"
                    android:textSize="10sp"
                    android:paddingLeft="6px"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_list_sub_attention_share_layout"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_share_blue"
                    android:background="#00000000"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:layout_marginLeft="16dp"-->
        <!--android:background="@color/list_divider_color" />-->

    <!--android:layout_marginStart="16dp"-->


</LinearLayout>