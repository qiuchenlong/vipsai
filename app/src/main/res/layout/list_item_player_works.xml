<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">


    <TextView
        android:id="@+id/list_item_play_works_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部作品"
        android:textSize="@dimen/font18sp"
        android:layout_margin="16dp"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/list_item_play_works_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        >

        <!--android:background="@drawable/ic_material"-->


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/image_no_6"
            android:scaleType="centerInside"
            android:background="#333333"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            >



            <com.vs.vipsai.widget.PortraitView
                android:id="@+id/iv_avatar"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/widget_default_face" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="作品 名称"
                android:textSize="12dp"
                />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
