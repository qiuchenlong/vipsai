<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/notify_item_layout"
        >

        <!--android:background="?attr/selectableItemBackgroundBorderless"-->

        <!--android:background="@drawable/ic_material"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.vs.vipsai.widget.PortraitView
                android:id="@+id/iv_portrait"
                style="@style/notify_portraitview_style"
                android:src="@mipmap/image_no_9"
                tools:src="@mipmap/image_no_9" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_list_sub_message_name"
                        style="@style/notify_title_style"
                        android:text="薛之谦"/>

                    <TextView
                        style="@style/notify_sub_title_style"
                        android:text="关注了你"
                        android:layout_marginLeft="5dp"/>


                </LinearLayout>



                <TextView
                    style="@style/notify_time_style"
                    android:text="5 分钟前"
                    />





            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="right|center_vertical">

                <ImageView
                    android:src="@mipmap/tmp_bg"
                    android:scaleType="fitEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="58dp"
                    android:layout_height="24dp"
                    android:text="+ 关注"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_btn_view_blue"
                    />

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="36dp"
                android:layout_height="1dp"
                android:src="@mipmap/tmp_head"
                tools:src="@mipmap/tmp_head"
                android:visibility="invisible"/>

            <TextView
                style="@style/notify_message_style"
                android:layout_marginLeft="8dp"
                android:text="恭喜您！您的作品【我的熊样】在比赛中获得第1名，赢得奖金￥500，00"
                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/lay_8"
            android:layout_marginLeft="16dp"
            android:background="@color/list_divider_color" />


    </LinearLayout>


</LinearLayout>